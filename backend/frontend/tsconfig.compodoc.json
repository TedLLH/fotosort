{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "angular-modal-gallery": [ "dist/angular-modal-gallery" ]
    }
  },
  "include": [
    "angular-modal-gallery/**/*"
  ],
  "exclude": [
    ".ng_build",
    "demo/**/*.*",
    "**/*.spec.ts",
    "e2e/**/*",
    "src/**/*"
  ]
}
